{
    "name": "Capstone Data Collector",
    "version": "0.0.1",
    "manifest_version": 2,
    "description": "Collects data for personal analytics",
    "icons": {
        "16": "img/icons/16.png",
        "128": "img/icons/128.png"
    },
    "browser_action": {
        "default_title": "Capstone",
        "default_icon": "img/icons/19.png",
        "default_popup": "html/popups/default.html"
    },
    "background": {
        "persistent": true,
        "scripts": [
            "js/bg.js"
        ]
    },
    "chrome_url_overrides" : {
        "history": "html/history.html"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["js/scout.js"],
            "all_frames": true
        }
    ],
    "homepage_url": "emberdb.com/capstone",
    "incognito": "spanning",
    "omnibox": {
        "keyword": "history"
    },
    "options_page": "html/options.html",
    "permissions": [
        "bookmarks",
        "clipboardWrite",
        "geolocation",
        "history",
        "idle",
        "notifications",
        "storage",
        "tabs",
        "webNavigation"
    ]
}